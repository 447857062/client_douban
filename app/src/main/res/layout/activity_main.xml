<?xml version="1.0" encoding="utf-8"?>
<deplink.com.douya.ui.DispatchInsetsDrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="deplink.com.douya.main.ui.MainActivity">

    <deplink.com.douya.ui.InsetBackgroundFrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        app:insetBackground="?colorPrimaryDarkWithoutSystemWindowScrim">

    </deplink.com.douya.ui.InsetBackgroundFrameLayout>

    <fragment
        android:id="@+id/navigation_fragment"
        android:name="deplink.com.douya.navigation.ui.NavigationFragment"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        tools:layout="@layout/navigation_fragment" />

    <deplink.com.douya.ui.MaxDimensionDispatchInsetsFrameLayout
        android:id="@+id/notification_list_drawer"
        android:layout_width="wrap_content"
        android:layout_gravity="end"
        android:background="?android:colorBackground"
        android:maxWidth="@dimen/drawer_max_width"
        android:layout_height="match_parent">

    </deplink.com.douya.ui.MaxDimensionDispatchInsetsFrameLayout>
</deplink.com.douya.ui.DispatchInsetsDrawerLayout>
